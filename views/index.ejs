<!DOCTYPE html>
<html>
<head>
  <title>Stationery Inventory</title>
  <link rel="stylesheet" href="/styles.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>📦 Stationery Inventory</h1>
      <a href="/add" class="add-btn">➕ Add New Item</a>
    </div>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Quantity</th>
          <th>Category</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach(item => { %>
          <tr>
            <td><%= item.name %></td>
            <td><%= item.quantity %></td>
            <td><%= item.category %></td>
            <td>
              <div class="action-links">
                <a href="/edit/<%= item._id %>" class="action-link edit-link">✏️ Edit</a>
                <a href="/delete/<%= item._id %>" class="action-link delete-link" onclick="return confirm('Are you sure you want to delete this item?')">🗑️ Delete</a>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
